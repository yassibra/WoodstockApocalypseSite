		function changeP(a){
			if(a==1){
				document.getElementById("ssou").innerHTML="Groupe A";
				document.getElementById("pHistoire").innerHTML="Des rumeurs ont été profilé par les bandits. Un virus contagieux et mortel se propage et des bandits ont indiqué qu'il y avait des remèdes à la ville la plus proche. Vous allez incarner la foule qui écoute les fausses informations.<br><br><mark>Cliquez sur l'image du groupe A pour commencer l'histoire</mark>";
			}
			else if(a==2){
				document.getElementById("ssou").innerHTML="Groupe B + *HISTOIRE*";
				document.getElementById("pHistoire").innerHTML='';
			}
			else if(a==3){
				document.getElementById("ssou").innerHTML="Groupe C + *HISTOIRE*";
				document.getElementById("pHistoire").innerHTML='';
			}
			else if(a==4){
				document.getElementById("ssou").innerHTML="Groupe D + *HISTOIRE*";
				document.getElementById("pHistoire").innerHTML='';
			}
			else if (a==5){
				document.getElementById("ssou").innerHTML="Choisissez votre groupe";
				document.getElementById("pHistoire").innerHTML='Un virus contagieux et mortel se propage. Vous allez incarner chacun des groupes pour tanter de survivre.';
			}
		}

	</script>
